{% extends 'admin/layout.html.twig' %}

{% block body %}
    <h1>Supplier</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ supplier.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ supplier.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ supplier.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if supplier.createdAt %}{{ supplier.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if supplier.updatedAt %}{{ supplier.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
                <td>{% if supplier.deletedAt %}{{ supplier.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_supplier_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_supplier_edit', { 'id': supplier.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
