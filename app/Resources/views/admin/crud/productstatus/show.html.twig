{% extends 'admin/layout.html.twig' %}

{% block body %}
    <h1>ProductStatus</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ productStatus.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ productStatus.label }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_productstatus_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_productstatus_edit', { 'id': productStatus.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
