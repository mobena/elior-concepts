{% extends 'admin/layout.html.twig' %}

{% block body %}
    <h1>Note list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Notecomment</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Deletedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td><a href="{{ path('admin_note_show', { 'id': note.id }) }}">{{ note.id }}</a></td>
                <td>{{ note.name }}</td>
                <td>{{ note.noteComment }}</td>
                <td>{% if note.createdAt %}{{ note.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if note.updatedAt %}{{ note.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if note.deletedAt %}<span style="background-color: red;">{{ note.deletedAt|date('Y-m-d H:i:s') }}</span>{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_note_show', { 'id': note.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_note_edit', { 'id': note.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_note_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
