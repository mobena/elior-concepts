{% extends 'base.html.twig' %}

{% block body %}
    <h1>Concepts</h1>
    {#<img src="{{ asset('img/concept-sample.jpg') }}" class="img-responsive" />#}

    {% for concept in concepts %}
        {% if concept.conceptstatus.id == 1 %}
            <table class="table">
                <thead>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ concept.name }}</td>
                    </tr>
                    <tr>
                        <td>{{ concept.description }}</td>
                    </tr>
                </tbody>
            </table>
        {% endif %}
    {% endfor %}
{% endblock %}